<div class='container'>
  <div class="row">
    <%= render 'layouts/sidemenu', book: @book, user: @user %>

    <div class='col-lg-9'>
      <h2>Books detail</h2>
      <table class='table table-hover table-inverse'>
        <thead>
        <tr>
          <th>User</th>
          <th>Title</th>
          <th>Opinion</th>
          <% if @book.user_id == current_user.id %>
            <th>Edit</th>
            <th>Delete</th>
          <% end %>
        </tr>
        </thead>

        <tbody>
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= attachment_image_tag @book.user, :profile_image, size: "100x100", fallback: "no_image.png"%>
              <%= @user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to @book.title, @book %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <% if @book.user_id == current_user.id %>
            <td>
              <%= link_to 'Edit', edit_book_path, class: 'btn btn-success' %>
            </td>
            <td>
              <%= link_to 'Destroy', book_path, method: :delete, data: {confirm: "本当に消しますか？"}, class: 'btn btn-danger' %>
            </td>
          <% end %>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>