<h1>edit</h1>
<%= form_for @user do |f| %>
  <h4>Title</h4>
  <%= f.text_field :name, autofocus: true%>
  <h4>Image</h4>
  <div class="form-group has-icon">
    <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像"%>
  </div>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %><br>
  <%= f.submit 'Update User', class:'btn btn-primary' %>
<% end %>