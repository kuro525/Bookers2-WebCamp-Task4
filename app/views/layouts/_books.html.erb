<div class='col-lg-9'>
  <%#= debug books.inspect %>
  <h2>Books</h2>
  <table class='table table-hover table-inverse'>
    <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
    </thead>

    <tbody>
    <% books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag book.user, :profile_image, size: "100x100", fallback: "no_image.png"%>
          <% end %>
        </td>
        <td>
          <%= link_to book.title, book %>
        </td>
        <td>
          <%= book.body %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>